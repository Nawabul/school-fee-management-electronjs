{
  "name": "school-fee-management-electronjs",
  "version": "1.0.3",
  "description": "Application for managing school fees",
  "main": "./out/main/index.js",
  "author": {
    "name": "Nawabul"
  },
  "homepage": "https://electron-vite.org",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps && flowbite-react patch && flowbite-react register",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux",
    "scriptinstall": "node scripts/fix-tailwind-version.js",
    "tailwind:build": "tailwindcss -c tailwind.config.ts -i ./src/renderer/src/index.css -o ./dist/output.css"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Nawabul/school-fee-management-electronjs.git"
  },
  "build": {
    "asar": true,
    "appId": "com.school-fee-management",
    "productName": "School Fee Management",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "school-fee-management-v${version}-Setup.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    },
    "files": [
      "dist",
      "dist-electron",
      "out",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "release/${platform}/${version}"
    }
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "@hookform/error-message": "^2.0.1",
    "@hookform/resolvers": "^5.0.1",
    "@tailwindcss/vite": "^4.1.8",
    "@tanstack/react-query": "^5.79.0",
    "@tanstack/react-table": "^8.21.3",
    "better-sqlite3": "^11.10.0",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.44.2",
    "electron-updater": "^6.3.9",
    "flowbite": "^3.1.2",
    "flowbite-react": "^0.11.9",
    "i": "^0.3.7",
    "lucide-react": "^0.511.0",
    "npm": "^11.4.1",
    "react-hook-form": "^7.56.4",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.6.1",
    "tailwind-merge": "^3.3.0",
    "zod": "^3.25.36"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.14.1",
    "@types/react": "^19.1.1",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "drizzle-kit": "^0.31.1",
    "electron": "^35.1.5",
    "electron-builder": "^25.1.8",
    "electron-vite": "^3.1.0",
    "eslint": "^9.24.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.0",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^6.2.6"
  }
}
